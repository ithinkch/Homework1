@model IEnumerable<Homework1.Models.客戶統計>

@{
    ViewBag.Title = "Index";
}

<h2>客戶統計報表</h2>

<div class="navbar-collapse collapse">
    <ul class="nav navbar-nav">
        <li>@Html.ActionLink("客戶資料", "Index", "Customer")</li>
        <li>@Html.ActionLink("客戶聯絡人", "Index", "Contact")</li>
        <li>@Html.ActionLink("客戶銀行", "Index", "Bank")</li>
    </ul>
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.客戶名稱)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶聯絡人數量)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.客戶銀行數量)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.客戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶聯絡人數量)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶銀行數量)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
